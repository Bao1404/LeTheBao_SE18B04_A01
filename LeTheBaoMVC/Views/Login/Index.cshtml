@model BusinessObjects.SystemAccount;
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<div class="login-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <!-- Header -->
                <div class="text-center mb-4">
                    <div class="brand-icon">
                        <i class="bi bi-newspaper"></i>
                    </div>
                    <h1 class="h3 fw-bold text-dark mb-2">FU News Management</h1>
                    <p class="text-muted">Access your news dashboard</p>
                </div>

                <!-- Login Card -->
                <div class="card login-card">
                    <div class="card-header bg-white border-0 text-center pt-4 pb-2">
                        <h2 class="h4 fw-semibold mb-1">Sign In</h2>
                        <p class="text-muted small mb-0">Enter your credentials to access the system</p>
                    </div>
                    <div class="card-body px-4 pb-4">
                        @if (ViewBag.ErrorMessage != null)
                        {
                            <h5 class="text-danger text-center">@ViewBag.ErrorMessage</h5>
                        }
                        <form id="loginForm" method="POST" action="Login">
                            <!-- Email Field -->
                            <div class="mb-3">
                                <label for="email" class="form-label fw-medium">Email Address</label>
                                <span class="text-danger" asp-validation-for="AccountEmail"></span>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-envelope"></i>
                                    </span>
                                    <input asp-for="AccountEmail" type="email" class="form-control" id="email"  placeholder="Enter your email">
                                </div>
                            </div>

                            <!-- Password Field -->
                            <div class="mb-3">
                                <label for="password" class="form-label fw-medium">Password</label>
                                <span class="text-danger" asp-validation-for="AccountPassword"></span>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-lock"></i>
                                    </span>
                                    <input asp-for="AccountPassword" type="password" class="form-control" id="password"  placeholder="Enter your password">
                                    <span class="input-group-text">
                                        <button type="button" class="password-toggle" id="togglePassword">
                                            <i class="bi bi-eye" id="toggleIcon"></i>
                                        </button>
                                    </span>
                                </div>
                            </div>

                            @* <!-- Remember Me & Forgot Password --> *@
                            @* <div class="d-flex justify-content-between align-items-center mb-4"> *@
                            @*     <div class="form-check"> *@
                            @*         <input class="form-check-input" type="checkbox" id="rememberMe"> *@
                            @*         <label class="form-check-label text-muted small" for="rememberMe"> *@
                            @*             Remember me *@
                            @*         </label> *@
                            @*     </div> *@
                            @*     <a href="#" class="forgot-password">Forgot password?</a> *@
                            @* </div> *@

                            <!-- Login Button -->
                            <button type="submit" class="btn btn-primary w-100 mb-3" style="background-color: #ff6b35; border: 1px solid #ff6b35;">
                                <span id="loginText">Sign In</span>
                                <span id="loginSpinner" class="spinner-border spinner-border-sm ms-2 d-none" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </span>
                            </button>
                        </form>

                        <hr class="my-4">

                        <!-- Footer -->
                        <div class="text-center">
                            <p class="footer-text mb-0">Need help? Contact your system administrator</p>
                        </div>
                    </div>
                </div>

                <!-- System Footer -->
                <div class="text-center mt-4">
                    <p class="system-footer mb-0">© 2024 FU News Management System. All rights reserved.</p>
                </div>
            </div>
            </div>
            </div>
            </div>
