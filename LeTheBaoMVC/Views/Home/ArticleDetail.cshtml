@{
}
<div class="reading-progress" id="readingProgress"></div>

<div class="breadcrumb-container">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="index.html">Home</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="index.html">@ViewBag.Article.Category.CategoryName</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="#"></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                   @ViewBag.Article.Headline
                </li>
            </ol>
        </nav>
    </div>
</div>

<div class="article-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <span class="article-category">@ViewBag.Article.Category.CategoryName</span>
                <h1 class="article-title">
                    @ViewBag.Article.NewsTitle
                </h1>
                <p class="article-subtitle">
                    @ViewBag.Article.Headline
                </p>

                <div class="article-meta">
                    <div class="author-info">
                        <div class="author-details">
                            <h6>@ViewBag.Article.CreatedBy.AccountName</h6>
                        </div>
                    </div>

                    <div class="article-stats">
                        <div class="stat-item">
                            <i class="bi bi-calendar3"></i>
                            <span>@ViewBag.Article.CreatedDate</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <!-- Main Content -->
        <div class="col-lg-8">
            <!-- Article Content -->
            <div class="article-content">
                <div class="article-body" id="articleBody">
                    <p>@ViewBag.Article.NewsContent</p>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Related Articles -->
            <div class="related-articles">
                <h6 class="sidebar-title">Related Articles</h6>
                    @foreach (var article in ViewBag.RelatedArticle)
                    {
                        <a href="#" class="related-card">
                            <div class="related-title">
                                @article.NewsTitle
                            </div>
                             <div class="related-meta">
                               <i class="bi bi-calendar3 me-1"></i>
                               @article.CreatedDate
                         </div>
                         </a>
                    }
            </div>
        </div>
    </div>
</div>