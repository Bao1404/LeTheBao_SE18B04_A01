@{
    ViewData["Title"] = "Home Page";
}

<div class="filter-container">
    <div class="container">
        <div class="d-flex flex-wrap align-items-center">
            <span class="me-3 fw-semibold">Filter by:</span>
            @foreach (var tag in ViewBag.TagList)
             { 
                <span class="btn filter-btn">@tag.TagName</span>
             }
        </div>
    </div>
</div>

<div class="container mt-4">

    <!-- Loading Spinner -->
    <div class="loading" id="loadingSpinner">
        <div class="spinner mx-auto mb-3"></div>
        <p class="text-muted">Loading articles...</p>
    </div>

    <!-- Articles Container -->
    <div class="row" id="articlesContainer">
        <!-- Articles will be dynamically loaded here -->
        @foreach (var article in ViewBag.ArticleList)
        {
            <a asp-controller="Home" asp-action="ArticleDetail" asp-route-id="@article.NewsArticleId" class="col-lg-4 col-md-6 mb-4 text-decoration-none">
                <div>
                    <div class="card news-card h-100">
                        <div class="card-body d-flex flex-column">
                            <span class="news-category" style="width: auto">
                                @article.Category.CategoryName
                            </span>

                            <h5 class="news-title">@article.NewsTitle</h5>
                            <p class="news-excerpt flex-grow-1">@article.Headline</p>

                            <div class="news-meta mt-auto">
                                <div class="d-flex align-items-center justify-content-between">
                                    <div class="fw-medium">@article.CreatedBy?.AccountName</div>
                                    <div class="text-muted">@article.CreatedDate?.ToString("MMM dd, yyyy")</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        }
    </div>

</div>